{% block page_actions %}{% endblock %}

{% block body %}
<div id="content">

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_errors(form) }}    

        <div>
            {{ form_row(form.title, { label: 'Titre du projet' }) }}
        </div>

