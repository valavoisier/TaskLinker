{% extends 'auth/base-logout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>S'inscrire</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': 'register-form'}}) }}
        {{ form_row(registrationForm.lastname, {label: 'Nom'}) }}
        {{ form_row(registrationForm.firstname, {label: 'Prénom'}) }} 
        {{ form_row(registrationForm.email, {label: 'E-mail'}) }}
        {{ form_row(registrationForm.plainPassword.first, {label: 'Mot de passe'}) }}
        {{ form_row(registrationForm.plainPassword.second, {label: 'Confirmation mot de passe'}) }}     
        <button type="submit" class="button button-submit register-submit">continuer</button>
    {{ form_end(registrationForm) }}    
    <a class="register-question" href="{{ path('app_login') }}">Vous avez déjà un compte ?</a>
{% endblock %}
